<div class="list-group-item list-group-item-dark">
  <h2>Suggested articles for tag:<span class="tag"><%= @topic.name %></span></h2>
</div>
Previous article: <%= link_to @filename, url_for(@upload.file) %>
<% if !@category.nil? %>
  <%= link_to @category.name, root_path({ "category" => @category.name }), class: "btn btn-outline-info" %>
<% else %>
  <div class="btn btn-outline-danger disabled"> <%= "No Category" %>  </div>
<% end %>

<br><br><br>
<hr>

<% if !@other_uploads_categories_hash.empty? %>
  <% @other_uploads_categories_hash.each do |category, uploads| %>
    <br>
    <h3>
      <% if category %>
        <%= link_to category.name, root_path({ "category" => category.name }), class: "list-group-item list-group-item-dark" %>
      <% else %>
        <div class="list-group-item list-group-item-dark"> <%= "<No Category>" %></div>
      <% end %>
    </h3>
    <div class="list-group">
      <% uploads.each do |upload| %>
        <%= render '/main/article_list', upload: upload %>
      <% end %>
    </div>
  <% end %>
<% else %>
  <em><u>No linked articles at the moment. Sorry for the inconvenience.</u></em>
<% end %>

<br><br><br>
<%= link_to "Back to Home", root_path, class: "btn btn-primary", id: "back-to-home-button" %>
