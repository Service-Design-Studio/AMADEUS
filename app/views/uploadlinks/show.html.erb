<h1> 
    <% if @category %>
        <%= link_to @category.name, root_path({"category" => @category.name}), class:"list-group-item list-group-item-dark" %>
    <% else %>
        <p style="color: red"> <%= "No Category" %> </p>
    <% end %> 
    <span class="tag">
    <%= link_to @topic.name, edit_topic_path(@topic), {:style=>'color:#FFFFFF;text-decoration:none'} %>
    </span>
    <hr>
</h1>

<% @other_uploads_categories_hash.each do |category, upload| %>
    <br>
    <h3> 
        <% if category %>
            <%= link_to category.name, root_path({"category" => category.name}), class:"list-group-item list-group-item-dark" %>
        <% else %>
            <p style="color: red"> <%= "No Category" %></p>
        <% end %>
    </h3> <br>
    <div class="list-group">
        <% upload.each do |upload_each| %>
            <%= render '/main/articlelist', upload: upload_each %>
        <% end %>
    </div>
<% end %>

<br>
<%= link_to "Back to Home", root_path, class: "btn btn-primary",id: "back-to-home-button"%>
