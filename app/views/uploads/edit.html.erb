<h3><%= render 'uploads/attachment', upload: @upload %></h3><br>

<h4>
  <% if !@linked_category.nil? %>
    <%= render 'uploads/inline_category', linked_category: @linked_category, upload: @upload %>
  <% else %>
    <%= "Category: <No Category>" %>
    <%= render 'uploads/edit_category_form', upload: @upload %>
  <% end %>
</h4><br>

<h5>List of Tags:</h5>
<div class="d-grid gap-2">
  <% @linked_topics.each do |uploadlink| %>
    <%= render 'uploads/inline_tag', uploadlink: uploadlink %>
  <% end %>
  <%= render 'uploads/edit_tag_form', upload: @upload %><br>

  <%= link_to "Delete this Upload", @upload, method: :delete, class: "btn btn-outline-danger", id: "delete-this-upload-button" %>
  <%= link_to "Back to Database", uploads_path, class: "btn btn-primary", id: "back-to-database-button" %>
</div>