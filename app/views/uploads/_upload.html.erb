<div id="<%= dom_id upload %>">
  <div style="width: 100%; display: table;">
    <div style="display: table-row">
      <div style="width: 20%; display: table-cell;">
        <% if !upload.upload_category_links.first.nil? %>
          <p> <%= link_to "#{upload.upload_category_links.first.category.name}",
                          edit_category_path(upload.upload_category_links.first),
                          class: "btn btn-outline-info" %> </p>
        <% else %>
          <p style="color: red">
            <%= link_to "No Category", new_category_path, class: "btn btn-outline-danger" %>
          </p>
        <% end %>
      </div>

      <div style="width: 60%; display: table-cell;">
        <div style="display: table-cell;"> <%= render 'uploads/attachment', upload: upload %> </div>
      </div>

      <div style="width: 25%; display: table-cell;">
        <% upload.topics.each do |topic| %>
          <span class="tag"><%= topic.name %></span>
        <% end %>
      </div>
      <div style="display: table-cell;">
        <%= link_to "Edit", edit_upload_path(upload), class: "btn btn-outline-secondary btn-sm", id: "upload-#{upload.id}" %>
      </div>
    </div>


  </div>
</div>
<hr style="width:100%">

