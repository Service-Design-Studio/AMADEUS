<p style="color: green"><%= notice %></p>

<h1><%= render 'uploads/attachment', upload: @upload %></h1>

<br>

<ul class="list-group">
  <% @upload.uploadlinks.each do |uploadlink| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <%= link_to uploadlink.topic, style:"text-decoration:none" do %>
          <%= uploadlink.topic.name %>
        <% end %>
        <span class="badge bg-primary rounded-pill"><%=uploadlink.similarity%></span>
      </li>
  <% end %>
</ul>

<br>

<div class="d-grid gap-2">
  <%= link_to "Edit this upload", edit_upload_path(@upload), class: "btn btn-outline-success" %>
  <%= link_to "Delete this upload", @upload, method: :delete, class: "btn btn-outline-danger" %>
  <%= link_to "View upload database", uploads_path, class: "btn btn-primary" %>
</div>
