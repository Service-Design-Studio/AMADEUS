<p style="color: green"><%= notice %></p>

<%= turbo_stream_from "uploads_list" %>

<div class="center">
  <h1>Database</h1>
  <%= link_to "New Upload", new_upload_path, class: "btn btn-success", id: "new-upload-button" %>
  <%= link_to "Back to Home", admin_path, class: "btn btn-primary", id: "back-to-home-button" %>
</div>
<br><br>

<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th scope="col" class="text-center">ML status</th>
      <th scope="col" class="text-center">Category</th>
      <th scope="col" class="text-center">Article</th>
      <th scope="col" class="text-center">Tags</th>
      <th scope="col" class="text-center"></th>
    </tr>
  </thead>
  <tbody id="uploads">
    <% @uploads.each do |upload| %>
      <%= render upload %>
    <% end %>
  </tbody>
</table>




