<div class="collapse collapse-horizontal custom-sidebar-container" id="navbarSupportedContentCategory">
<div class="collapse collapse-horizontal custom-sidebar" id="navbarSupportedContentCategory">
  <div class="list-group">
    <% Category.all.sort_by { |category| category.name }.each do |category| %>
    <%= link_to category.name, root_path({ "category" => category.name }),
                class: "list-group-item list-group-item-action #{set_sidebar_category_selected(@selected_category, category.name)}", id: "#{category.name}-edit-button" %>
    <% end %>
  </div>
</div>
</div>