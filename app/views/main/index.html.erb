<div class="fixed custom_sidebar">
  <div class="center">
    <ul class="list-group">
      <br>
      <h3> Categories </h3>
      <br>
      <% @categories.each do |category| %>
        <% if @selected_category == category.name %>
          <%= link_to category.name, root_path({ "category" => category.name }), class: "list-group-item list-group-item-dark" %>
        <% else %>
          <%= link_to category.name, root_path({ "category" => category.name }), class: "list-group-item list-group-item-action" %>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>

<div class="custom_content">
  <% if @category %>
    <h1><%= @category.name %></h1>
  <% else %>
    <h1> <%= "All categories" %> </h1>
  <% end %>
  <hr>
  <div class="list-group">
    <% if !@uploads.empty? %>
      <% @uploads.each do |upload| %>
        <%= render "article_list", upload: upload %>
      <% end %>
    <% else %>
      <em><u>No articles at the moment. Sorry for the inconvenience.</u></em>
  <% end %>
  </div>
</div>

